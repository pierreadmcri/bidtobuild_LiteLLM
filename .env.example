# ==========================================
# CONFIGURATION AZURE OPENAI (OBLIGATOIRE)
# ==========================================

AZURE_API_KEY="votre_cle_api_azure"
AZURE_API_BASE="https://votre-instance.openai.azure.com"
AZURE_API_VERSION="2024-02-01"

# ==========================================
# MODÈLES DÉPLOYÉS (OPTIONNEL)
# ==========================================

# Modèle de génération de texte
# Modèles disponibles : gpt-4.1-mini, gpt-4o-mini, gpt-4-turbo, gpt-4, gpt-3.5-turbo
MODEL_NAME="azure/gpt-4.1-mini"

# Modèle d'embeddings
# Modèles disponibles : text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
EMBEDDING_MODEL_NAME="azure/text-embedding-3-small"

# Modèle Vision pour analyse d'images
# Modèles avec Vision : gpt-4o, gpt-4-turbo, gpt-4-vision-preview
VISION_MODEL_NAME="azure/gpt-4o"

# ==========================================
# LIMITES DE SÉCURITÉ (OPTIONNEL)
# ==========================================

# Taille maximale des fichiers en bytes (défaut: 50 MB)
MAX_FILE_SIZE_BYTES=52428800

# Limite de tokens en entrée pour le modèle (défaut: 100,000)
MAX_INPUT_TOKENS=100000

# ==========================================
# CONFIGURATION IMAGES (OPTIONNEL)
# ==========================================

# Activer l'analyse d'images avec Vision API (true/false)
ENABLE_IMAGE_ANALYSIS="true"

# Taille maximale des images en bytes (défaut: 20 MB)
MAX_IMAGE_SIZE_BYTES=20971520

# Dimension maximale pour redimensionnement (défaut: 2048px)
MAX_IMAGE_DIMENSION=2048

# Qualité JPEG après compression 1-100 (défaut: 85)
IMAGE_QUALITY=85

# ==========================================
# LOGGING (OPTIONNEL)
# ==========================================

# Niveau de log LiteLLM : DEBUG, INFO, WARNING, ERROR
# Recommandé : ERROR en production, DEBUG en développement
LITELLM_LOG="ERROR"

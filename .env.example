# ==========================================
# CONFIGURATION API KEY (OBLIGATOIRE)
# ==========================================

OPENAI_API_KEY="votre_cle_api_openai"
OPENAI_API_BASE="https://llmproxy.ai.orange"

# ==========================================
# MODÈLES DÉPLOYÉS (OPTIONNEL)
# ==========================================

# Modèle de génération de texte
# IMPORTANT: Le préfixe "openai/" est OBLIGATOIRE pour le proxy LLM Orange
# Modèles disponibles : gpt-4.1-mini, gpt-4o-mini, gpt-4-turbo, gpt-4, gpt-3.5-turbo
MODEL_NAME="openai/gpt-4.1-mini"

# Modèle d'embeddings
# IMPORTANT: Le préfixe "openai/" est OBLIGATOIRE pour le proxy LLM Orange
# Modèles disponibles : text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
EMBEDDING_MODEL_NAME="openai/text-embedding-3-small"

# ==========================================
# LIMITES DE SÉCURITÉ (OPTIONNEL)
# ==========================================

# Taille maximale des fichiers en bytes (défaut: 50 MB)
MAX_FILE_SIZE_BYTES=52428800

# Limite de tokens en entrée pour le modèle (défaut: 100,000)
MAX_INPUT_TOKENS=100000

# ==========================================
# CONFIGURATION OCR (OPTIONNEL)
# ==========================================

# Activer l'extraction de texte des images avec OCR (true/false)
ENABLE_IMAGE_OCR="true"

# Taille maximale des images en bytes (défaut: 20 MB)
MAX_IMAGE_SIZE_BYTES=20971520

# Langue(s) pour l'OCR Tesseract
# Format: 'fra' pour français, 'eng' pour anglais, 'fra+eng' pour les deux
OCR_LANGUAGE="fra+eng"

# Résolution minimale pour améliorer la qualité OCR (défaut: 1000px)
MIN_OCR_DIMENSION=1000

# ==========================================
# CONFIGURATION EXCEL (OPTIONNEL)
# ==========================================

# Nombre maximum d'onglets à extraire par fichier Excel (défaut: 2)
MAX_EXCEL_SHEETS=2

# Stratégie de sélection des onglets : 'exact' (correspondance stricte), 'auto' (intelligent) ou 'first' (premiers)
EXCEL_SHEET_STRATEGY="exact"

# Noms d'onglets à prioriser (séparés par des virgules)
EXCEL_PRIORITY_SHEETS="Build,Run"

# Nombre maximum de lignes à extraire par onglet (0 = toutes les lignes, défaut: 1000)
MAX_EXCEL_ROWS=1000

# ==========================================
# LOGGING & LITELLM (OPTIONNEL)
# ==========================================

# Niveau de log LiteLLM : DEBUG, INFO, WARNING, ERROR
# Recommandé : ERROR en production, DEBUG en développement
LITELLM_LOG="ERROR"

# Timeout pour les requêtes LiteLLM (en secondes, défaut: 600)
LITELLM_TIMEOUT=600

# Nombre de retry automatiques LiteLLM (défaut: 2)
LITELLM_NUM_RETRIES=2
